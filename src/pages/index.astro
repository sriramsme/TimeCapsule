---
import Layout from "@/layouts/Layout.astro";
import TimelineList from "@/components/TImelineList";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";
import GitHubStarsButton from "@/components/GithubStarsButton";
---

<Layout title="TimeCapsule - Your Life in Yearly Snapshots">
	<main class="min-h-screen">
		<!-- Hero Section with Background -->
		<section
			class="hero-section relative min-h-[100vh] flex items-center justify-center overflow-hidden"
		>
			<!-- Background Image with Overlay -->
			<div class="absolute inset-0 z-0">
				<div
					class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-[var(--background)] z-10"
				>
				</div>
				<img
					src="/bg.webp"
					alt="Background"
					class="w-full h-full object-cover"
				/>
			</div>
			<div class="absolute top-4 right-4">
				<GitHubStarsButton
					variant="default"
					size="default"
					client:load
				/>
			</div>

			<!-- Hero Content -->
			<div class="relative z-20 container mx-auto px-4 text-center">
				<div class="max-w-4xl mx-auto space-y-8 animate-fade-in-up">
					<!-- Title with elegant animation -->
					<h1 class="hero-title">
						<span
							class="block text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-display font-bold tracking-tight"
						>
							<span
								class="inline-block animate-float text-white"
								style="animation-delay: 0s; font-weight: bold"
								>Time</span
							>
							<span
								class="inline-block animate-float text-white"
								style="animation-delay: 0.2s; font-weight: bold"
								>Capsule</span
							>
						</span>
					</h1>

					<!-- Subtitle -->
					<p
						class="text-xl sm:text-2xl md:text-3xl text-[var(--foreground)]/90 font-light tracking-wide animate-fade-in"
						style="animation-delay: 0.4s;"
					>
						Your life in yearly snapshots
					</p>

					<!-- Feature Pills -->
					<div
						class="flex flex-wrap gap-3 justify-center items-center pt-4 animate-fade-in"
						style="animation-delay: 0.6s;"
					>
						<div
							class="feature-pill bg-[var(--accent)]/10 border-[var(--border)] text-[var(--accent-foreground)]"
						>
							<svg
								class="w-5 h-5"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M12 4v16m8-8H4"></path>
							</svg>
							<span>Create</span>
						</div>
						<div
							class="feature-pill bg-[var(--accent)]/10 border-[var(--border)] text-[var(--accent-foreground)]"
						>
							<svg
								class="w-5 h-5"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"
								></path>
							</svg>
							<span>Share</span>
							<span class="feature-badge">âœ¨</span>
						</div>
						<div
							class="feature-pill bg-[var(--accent)]/10 border-[var(--border)] text-[var(--accent-foreground)]"
						>
							<svg
								class="w-5 h-5"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
								></path>
							</svg>
							<span>Export</span>
						</div>
						<div
							class="feature-pill bg-[var(--accent)]/10 border-[var(--border)] text-[var(--accent-foreground)]"
						>
							<svg
								class="w-5 h-5"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
								></path>
							</svg>
							<span>Embed</span>
						</div>
					</div>
				</div>

				<!-- Scroll Indicator -->
				<a
					href="#timelines"
					class="absolute mt-16 left-1/2 -translate-x-1/2 animate-bounce cursor-pointer"
				>
					<svg
						class="w-6 h-6 text-[var(--foreground)]/70 animate-fade-in-up"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
					</svg>
				</a>
			</div>
		</section>

		<!-- Timelines Section -->
		<section
			id="timelines"
			class="py-16 sm:py-20 bg-[var(--background)] relative"
		>
			<!-- Decorative gradient -->
			<div
				class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-[var(--accent-500)]/50 to-transparent"
			>
			</div>

			<div class="container mx-auto px-4">
				<div class="max-w-6xl mx-auto">
					<!-- Section Header -->
					<div class="text-center mb-12 space-y-4">
						<h2
							class="text-4xl sm:text-5xl font-display font-bold text-[var(--foreground)]"
						>
							Your Timelines
						</h2>
						<p
							class="text-lg text-[var(--muted-foreground)] max-w-2xl mx-auto"
						>
							Capture, preserve, and share the moments that define
							your journey
						</p>
					</div>

					<!-- Timeline List Component (Client-side) -->
					<TimelineList client:load />
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	/* Animations */
	@keyframes fade-in-up {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fade-in {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	.animate-fade-in-up {
		animation: fade-in-up 0.8s ease-out forwards;
	}

	.animate-fade-in {
		animation: fade-in 0.8s ease-out forwards;
		opacity: 0;
	}

	.animate-float {
		animation: float 3s ease-in-out infinite;
	}

	/* Hero Title Styling */
	.hero-title {
		text-shadow:
			0 4px 20px rgba(0, 0, 0, 0.5),
			0 0 40px rgba(var(--accent-rgb), 0.3);
		color: white;
	}

	/* Feature Pills */
	.feature-pill {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: 9999px;
		color: white;
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.feature-pill:hover {
		background: rgba(255, 255, 255, 0.2);
		transform: translateY(-2px);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
	}

	.feature-badge {
		font-size: 0.875rem;
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			opacity: 1;
			transform: scale(1);
		}
		50% {
			opacity: 0.8;
			transform: scale(1.1);
		}
	}

	/* Smooth Scroll */
	html {
		scroll-behavior: smooth;
	}

	/* Background image optimization */
	.hero-section img {
		object-position: center;
	}

	@media (max-width: 640px) {
		.hero-title {
			font-size: 3.5rem;
		}
	}
</style>
